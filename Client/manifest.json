{
    "name": "Watchdog",
    "description": "Scam detector for Facebook Messenger",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/ui/popup.html",
      "default_icon": "Watchdog.png"
    },
    "background": {
      "service_worker": "src/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content.js"],
        "css": ["src/styles.css"]
      }
    ],
    "host_permissions": ["http://127.0.0.1:8000/*"]
}