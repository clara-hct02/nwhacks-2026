{
    "name": "Watchdog",
    "description": "Scam detector for Facebook Messenger",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/ui/popup.html",
      "default_icon": "hello_extensions.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ]
  }