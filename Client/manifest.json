{
  "name": "Watchdog",
  "description": "Scam detector for Facebook Messenger",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "src/ui/popup.html",
    "default_icon": "Watchdog.png"
  },

  "background": {
    "service_worker": "src/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://m.facebook.com/*",
        "https://web.facebook.com/*",
        "https://www.messenger.com/*",
        "https://messenger.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["likelyscam.png", "potentialscam.png"],
      "matches": [
        "https://www.facebook.com/*",
        "https://facebook.com/*",
        "https://m.facebook.com/*",
        "https://web.facebook.com/*",
        "https://www.messenger.com/*",
        "https://messenger.com/*"
      ]
    }
  ],

  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ]
}
